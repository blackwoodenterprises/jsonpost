{
  "title": "Customer Feedback Survey",
  "description": "Help us improve our service by sharing your experience",
  "submitEndpoint": "https://jsonpost.com/api/submit/63c61c56-f128-4096-a818-771ee0bafd0c/studyhop-wizard-form",
  "steps": [
    {
      "id": "welcome",
      "type": "statement",
      "title": "We Value Your Feedback",
      "content": "Thank you for taking the time to share your experience with us. Your feedback helps us improve our products and services.",
      "required": false
    },
    {
      "id": "customer_name",
      "type": "short_text",
      "title": "What's your name?",
      "placeholder": "Enter your full name",
      "required": true,
      "validation": {
        "minLength": 2,
        "maxLength": 100
      }
    },
    {
      "id": "email",
      "type": "email",
      "title": "Your email address",
      "placeholder": "your.email@example.com",
      "required": true,
      "validation": {
        "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$"
      }
    },
    {
      "id": "customer_type",
      "type": "single_select",
      "title": "How would you describe yourself?",
      "required": true,
      "options": [
        { "value": "new_customer", "label": "New Customer (first purchase)" },
        { "value": "returning_customer", "label": "Returning Customer" },
        { "value": "frequent_customer", "label": "Frequent Customer" },
        { "value": "business_customer", "label": "Business Customer" }
      ]
    },
    {
      "id": "purchase_date",
      "type": "date",
      "title": "When did you make your recent purchase?",
      "required": true,
      "validation": {
        "maxDate": "today"
      }
    },
    {
      "id": "products_purchased",
      "type": "multiple_select",
      "title": "Which products/services did you purchase?",
      "required": true,
      "options": [
        { "value": "software", "label": "Software Solutions" },
        { "value": "consulting", "label": "Consulting Services" },
        { "value": "support", "label": "Technical Support" },
        { "value": "training", "label": "Training Programs" },
        { "value": "hardware", "label": "Hardware Products" },
        { "value": "cloud", "label": "Cloud Services" },
        { "value": "mobile_apps", "label": "Mobile Applications" },
        { "value": "web_development", "label": "Web Development" },
        { "value": "data_analytics", "label": "Data Analytics" },
        { "value": "cybersecurity", "label": "Cybersecurity Solutions" },
        { "value": "ai_ml", "label": "AI/Machine Learning" },
        { "value": "integration", "label": "System Integration" },
        { "value": "maintenance", "label": "Maintenance Services" },
        { "value": "licensing", "label": "Software Licensing" },
        { "value": "other", "label": "Other" }
      ]
    },
    {
      "id": "overall_satisfaction",
      "type": "star_rating",
      "title": "How would you rate your overall experience?",
      "required": true,
      "maxStars": 5,
      "labels": {
        "1": "Very Poor",
        "2": "Poor", 
        "3": "Average",
        "4": "Good",
        "5": "Excellent"
      }
    },
    {
      "id": "recommendation_score",
      "type": "opinion_scale",
      "title": "How likely are you to recommend us to others?",
      "required": true,
      "scale": {
        "min": 1,
        "max": 9,
        "minLabel": "Not likely",
        "maxLabel": "Very likely"
      }
    },
    {
      "id": "service_aspects",
      "type": "multiple_select",
      "title": "Which aspects of our service impressed you most?",
      "required": false,
      "options": [
        { "value": "quality", "label": "Product Quality" },
        { "value": "speed", "label": "Fast Delivery/Service" },
        { "value": "support", "label": "Customer Support" },
        { "value": "pricing", "label": "Competitive Pricing" },
        { "value": "ease_of_use", "label": "Ease of Use" },
        { "value": "reliability", "label": "Reliability" }
      ]
    },
    {
      "id": "improvement_areas",
      "type": "long_text",
      "title": "What areas do you think we could improve?",
      "placeholder": "Please share your suggestions for improvement...",
      "required": false,
      "validation": {
        "maxLength": 1000
      }
    },
    {
      "id": "additional_comments",
      "type": "long_text",
      "title": "Any additional comments or feedback?",
      "placeholder": "Feel free to share any other thoughts...",
      "required": false,
      "validation": {
        "maxLength": 500
      }
    },
    {
      "id": "contact_preference",
      "type": "dropdown",
      "title": "How would you prefer us to contact you for follow-up?",
      "required": false,
      "options": [
        { "value": "email", "label": "Email" },
        { "value": "phone", "label": "Phone Call" },
        { "value": "no_contact", "label": "Please don't contact me" }
      ]
    },
    {
      "id": "thank_you",
      "type": "statement",
      "title": "Thank You for Your Feedback!",
      "content": "We appreciate you taking the time to share your experience. Your feedback is valuable and will help us serve you better in the future.",
      "required": false
    }
  ]
}