{
  "title": "Restaurant Reservation",
  "description": "Book your table at our award-winning restaurant",
  "submitEndpoint": "https://jsonpost.com/api/submit/63c61c56-f128-4096-a818-771ee0bafd0c/studyhop-wizard-form",
  "steps": [
    {
      "id": "welcome",
      "type": "statement",
      "title": "Welcome to Bella Vista Restaurant",
      "content": "Thank you for choosing us for your dining experience. Please complete this reservation form to secure your table.",
      "required": false
    },
    {
      "id": "guest_name",
      "type": "short_text",
      "title": "Name for reservation",
      "placeholder": "Enter the name for this reservation",
      "required": true,
      "validation": {
        "minLength": 2,
        "maxLength": 100
      }
    },
    {
      "id": "phone",
      "type": "phone",
      "title": "Phone Number",
      "placeholder": "+1 (555) 123-4567",
      "required": true
    },
    {
      "id": "email",
      "type": "email",
      "title": "Email Address",
      "placeholder": "your.email@example.com",
      "required": false,
      "validation": {
        "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$"
      }
    },
    {
      "id": "reservation_date",
      "type": "date",
      "title": "Preferred Date",
      "required": true,
      "validation": {
        "minDate": "today"
      }
    },
    {
      "id": "reservation_time",
      "type": "dropdown",
      "title": "Preferred Time",
      "required": true,
      "options": [
        { "value": "17:00", "label": "5:00 PM" },
        { "value": "17:30", "label": "5:30 PM" },
        { "value": "18:00", "label": "6:00 PM" },
        { "value": "18:30", "label": "6:30 PM" },
        { "value": "19:00", "label": "7:00 PM" },
        { "value": "19:30", "label": "7:30 PM" },
        { "value": "20:00", "label": "8:00 PM" },
        { "value": "20:30", "label": "8:30 PM" },
        { "value": "21:00", "label": "9:00 PM" },
        { "value": "21:30", "label": "9:30 PM" }
      ]
    },
    {
      "id": "party_size",
      "type": "number",
      "title": "Number of guests",
      "placeholder": "Enter number of people",
      "required": true,
      "validation": {
        "min": 1,
        "max": 12
      }
    },
    {
      "id": "seating_preference",
      "type": "single_select",
      "title": "Seating preference",
      "required": false,
      "options": [
        { "value": "indoor", "label": "Indoor dining" },
        { "value": "outdoor", "label": "Outdoor patio" },
        { "value": "bar", "label": "Bar seating" },
        { "value": "private", "label": "Private dining room" },
        { "value": "no_preference", "label": "No preference" }
      ]
    },
    {
      "id": "occasion",
      "type": "dropdown",
      "title": "Special occasion?",
      "required": false,
      "options": [
        { "value": "none", "label": "No special occasion" },
        { "value": "birthday", "label": "Birthday" },
        { "value": "anniversary", "label": "Anniversary" },
        { "value": "date_night", "label": "Date night" },
        { "value": "business", "label": "Business dinner" },
        { "value": "celebration", "label": "Celebration" },
        { "value": "proposal", "label": "Proposal" },
        { "value": "other", "label": "Other" }
      ]
    },
    {
      "id": "dietary_restrictions",
      "type": "multiple_select",
      "title": "Any dietary restrictions or allergies?",
      "required": false,
      "options": [
        { "value": "vegetarian", "label": "Vegetarian" },
        { "value": "vegan", "label": "Vegan" },
        { "value": "gluten_free", "label": "Gluten-free" },
        { "value": "dairy_free", "label": "Dairy-free" },
        { "value": "nut_allergy", "label": "Nut allergy" },
        { "value": "shellfish_allergy", "label": "Shellfish allergy" },
        { "value": "halal", "label": "Halal" },
        { "value": "kosher", "label": "Kosher" },
        { "value": "none", "label": "No restrictions" }
      ]
    },
    {
      "id": "wine_pairing",
      "type": "single_select",
      "title": "Interested in wine pairing?",
      "required": false,
      "options": [
        { "value": "yes_sommelier", "label": "Yes, with sommelier consultation" },
        { "value": "yes_standard", "label": "Yes, standard wine pairing" },
        { "value": "maybe", "label": "Maybe, tell me more" },
        { "value": "no", "label": "No, thank you" }
      ]
    },
    {
      "id": "budget_range",
      "type": "dropdown",
      "title": "Expected budget per person (optional)",
      "required": false,
      "options": [
        { "value": "50-75", "label": "$50-75" },
        { "value": "75-100", "label": "$75-100" },
        { "value": "100-150", "label": "$100-150" },
        { "value": "150-200", "label": "$150-200" },
        { "value": "200+", "label": "$200+" },
        { "value": "no_limit", "label": "No specific limit" }
      ]
    },
    {
      "id": "visit_frequency",
      "type": "single_select",
      "title": "How often do you dine with us?",
      "required": false,
      "options": [
        { "value": "first_time", "label": "First time visitor" },
        { "value": "occasional", "label": "Occasional (few times a year)" },
        { "value": "regular", "label": "Regular (monthly)" },
        { "value": "frequent", "label": "Frequent (weekly)" }
      ]
    },
    {
      "id": "service_rating_expectation",
      "type": "star_rating",
      "title": "What level of service do you expect?",
      "required": false,
      "maxStars": 5,
      "labels": {
        "1": "Basic",
        "2": "Good",
        "3": "Very Good",
        "4": "Excellent",
        "5": "Exceptional"
      }
    },
    {
      "id": "special_requests",
      "type": "long_text",
      "title": "Any special requests or notes?",
      "placeholder": "Please let us know about any special arrangements, accessibility needs, or other requests...",
      "required": false,
      "validation": {
        "maxLength": 500
      }
    }
  ]
}